{
    "name": "synolia/sylius-admin-notification-plugin",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin", "notification"],
    "description": "Admin notifications for Sylius.",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "sylius/sylius": "^1.9",
        "symfony/cache": "^5.4",
        "symfony/notifier": "^5.4",
        "symfony/monolog-bundle": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpmd/phpmd": "^2.12",
        "phpro/grumphp": "^1.13",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "1.6.5",
        "phpstan/phpstan-doctrine": "1.3.3",
        "phpstan/phpstan-strict-rules": "1.2.3",
        "phpstan/phpstan-webmozart-assert": "1.1.2",
        "phpunit/phpunit": "^9.5",
        "povils/phpmnd": "^2.5",
        "sebastian/phpcpd": "^6.0",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.7",
        "sylius-labs/coding-standard": "^4.1",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "vimeo/psalm": "^4.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/thanks": true,
            "phpstan/extension-installer": true,
            "phpro/grumphp": true
        }
    },
    "autoload": {
        "psr-4": {
            "Synolia\\SyliusAdminNotificationPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Synolia\\SyliusAdminNotificationPlugin\\": "tests/"
        }
    },
    "scripts": {
        "fix": "php-cs-fixer fix --config=dev/.php-cs-fixer.php",
        "grumphp": "grumphp run --ansi",
        "phpstan": "phpstan analyse -c dev/phpstan.neon --ansi"
    }
}
