{
    "name": "synolia/sylius-admin-notification-plugin",
    "type": "sylius-plugin",
    "description": "Admin notifications for Sylius.",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "sylius/sylius": "^1.9",
        "symfony/cache": "^5.4",
        "symfony/notifier": "^5.4",
        "symfony/monolog-bundle": "^3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "1.6.5",
        "phpstan/phpstan-doctrine": "1.3.3",
        "phpstan/phpstan-strict-rules": "1.2.3",
        "phpstan/phpstan-webmozart-assert": "1.1.2",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "vimeo/psalm": "4.4.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Synolia\\SyliusAdminNotificationPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Synolia\\SyliusAdminNotificationPlugin\\": "tests/"
        }
    },
    "scripts": {
        "fix-ecs": "ecs check -c ruleset/ecs.php --fix --ansi --clear-cache"
    }
}
